<div class="grid grid-cols-12 hover:bg-gray-100 py-2 px-1 cursor-default">
    <div class="col-span-4">
        @Item.Key
    </div>
    <div class="col-span-6">
        @if (!_visible)
        {
            <button class="flex items-center text-blue-600" @onclick="@(() => _visible = !_visible)">
                <span class="fill-blue-600" style="transform: scale(0.8);">
                    <IconVisibility></IconVisibility>
                </span>
                <span class="text-sm ml-3"> Hidden value. Click to show value </span>
            </button>
        }
        else
        {
            <button class="flex items-center" @onclick="@(() => _visible = false)">
                <span class="fill-blue-600" style="transform: scale(0.8);">
                    <IconVisibilityOff></IconVisibilityOff>
                </span>
                <span class="text-sm ml-3">
                    @Item.Value
                </span>
            </button>
        }
    </div>
    <div>
        <button @onclick="Delete">
            <span class="fill-gray-500">
                <IconDelete></IconDelete>
            </span>
        </button>
    </div>
    <div>
        <button>
            <span class="fill-gray-500">
                <IconEdit></IconEdit>
            </span>
        </button>
    </div>
</div>
